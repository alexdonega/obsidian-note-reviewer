{
  "name": "obsidian-note-reviewer",
  "version": "0.2.1",
  "private": true,
  "description": "Obsidian Note Reviewer - Create and review notes for Obsidian with Claude Code integration",
  "author": "Alex Donega",
  "license": "BSL-1.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexdonega/obsidian-note-reviewer.git"
  },
  "homepage": "https://github.com/alexdonega/obsidian-note-reviewer",
  "bugs": {
    "url": "https://github.com/alexdonega/obsidian-note-reviewer/issues"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev:hook": "bun run --cwd apps/hook dev",
    "dev:portal": "bun run --cwd apps/portal dev",
    "dev:marketing": "bun run --cwd apps/marketing dev",
    "build:hook": "bun run --cwd apps/hook build",
    "build:portal": "bun run --cwd apps/portal build",
    "build:marketing": "bun run --cwd apps/marketing build",
    "build:opencode": "bun run --cwd apps/opencode-plugin build",
    "build": "bun run build:hook && bun run build:opencode",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "bun run lint",
      "bun test --related --passWithNoTests"
    ]
  },
  "dependencies": {
    "@sentry/react": "^10.32.1",
    "@sentry/vite-plugin": "^4.6.1",
    "@supabase/supabase-js": "^2.89.0",
    "@types/dompurify": "^3.2.0",
    "@upstash/ratelimit": "^2.0.7",
    "@upstash/redis": "^1.36.0",
    "dompurify": "^3.3.1",
    "js-yaml": "^4.1.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/js-yaml": "^4.0.9",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-security": "^3.0.1",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  }
}
